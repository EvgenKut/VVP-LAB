using System;
					
public class Program
{
	public static void Main(string[] args)
	{
	Console.WriteLine("Введите координаты вершины А (x1,y1)\n");
	double x1 = Convert.ToDouble(Console.ReadLine());
	double y1 = Convert.ToDouble(Console.ReadLine());
	Console.WriteLine("Введите координаты вершины D (x2,y2)\n");
	double x2 = Convert.ToDouble(Console.ReadLine());
	double y2 = Convert.ToDouble(Console.ReadLine());
	double P = 2*(Math.Abs(x1-x2)+Math.Abs(y1-y2));
	Console.WriteLine("Периметр прямоугольника равен\n" + (P));
	double S = Math.Abs(x1-x2)*Math.Abs(y1-y2);
	Console.WriteLine("Площадь прямоугольника равна\n" + (S));
	}
}
