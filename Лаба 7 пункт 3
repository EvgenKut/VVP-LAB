using System;
public class Program
{
	public static void Main(string[] args)
	{
	 Console.WriteLine("X кг конфет стоит A рублей. Введите X и A\n X=");
	 double X = Convert.ToDouble(Console.ReadLine());
	 Console.WriteLine("\n A=");
	 double A = Convert.ToDouble(Console.ReadLine());
	 Console.WriteLine("Введите Y кг конфет, стоимость которых хотите узнать.\n Y=");
	 double Y = Convert.ToDouble(Console.ReadLine());
	 double x = A/X;
	 Console.WriteLine("1 кг конфет стоит "+ (x)+ " рублей");
	 double y = x*Y;
	 Console.WriteLine((Y)+ " килограмм конфет стоит(стоят) "+(y)+" рублей");
	}
}
