using System;
public class Program
{
	public static void Main(string[] args)
	{
	 Console.WriteLine("Введите значения A и B\n A=");
	 double A = Convert.ToDouble(Console.ReadLine());
	 while (A==0){
	     Console.WriteLine("A=0. Введите другое значение\n A=");
	     A = Convert.ToDouble(Console.ReadLine());
	 }
	 Console.WriteLine("B=");
	 double B = Convert.ToDouble(Console.ReadLine());
	 double x = -B/A;
	 Console.WriteLine("Корень уравнения A*x + B = 0 равен "+ (x));
	}
}
