using System;
public class Program
{
	public static void Main(string[] args)
	{
    Console.WriteLine("Введите целое число");
    int A = Convert.ToInt32(Console.ReadLine());
    if (A==0){
       Console.WriteLine("Это нулевое число"); 
    }else if (A>0){
        if (A%2==0){
            Console.WriteLine("Это положительное четное число");
        }else
        Console.WriteLine("Это положительное нечетное число");
    }else if (A%2==0){
        Console.WriteLine("Это отрицательное четное число");
    }else 
    Console.WriteLine("Это отрицательное нечетное число");
	}
}
