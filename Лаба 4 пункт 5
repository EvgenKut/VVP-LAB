using System;
					
public class Program
{
	public static void Main(string[] args)
	{
		Console.WriteLine("Введите число a\n"); // Вывод сообщения о просьбе ввести число а
		double a = Convert.ToDouble(Console.ReadLine());
		Console.WriteLine("Введите число b\n"); // Вывод сообщения о просьбе ввести число b
		double b = Convert.ToDouble(Console.ReadLine());
		double x = Convert.ToDouble(Math.Abs(a));
		double y = Convert.ToDouble(Math.Abs(b)); //Для удобства обозначим модули чисел a и b за x и y
		if (a!=0 && b!=0) // Если a и b ненулевые, посчитать и вывести значение
		{
		 double c = x + y;
		Console.WriteLine("Сумма модулей равна\n"); 
		Console.WriteLine(c); // Суммы их модулей
		 double d = x - y;
		Console.WriteLine("Разность модулей равна\n"); 
		Console.WriteLine(d); // Разности их модулей
		 double e = x * y;
		Console.WriteLine("Произведение модулей равно\n"); 
		Console.WriteLine(e); // Произведения их модулей
		 double f = x / y;
		Console.WriteLine("Частное модулей равно\n"); 
		Console.WriteLine(f); // Частного их модулей
		}
		else 
		{
		Console.WriteLine("Числа a и b не должны равняться нулю.\n"); // Иначе вывести данное сообщение
		}	

	}
}
