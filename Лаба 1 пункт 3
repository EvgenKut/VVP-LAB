using System;
					
public class Program
{
	public static void Main(string[] args)
	{
		Console.WriteLine("Введите число a\n"); // Вывод сообщения о просьбе ввести число а
		double a = Convert.ToDouble(Console.ReadLine());
		Console.WriteLine("Введите число b\n"); // Вывод сообщения о просьбе ввести число b
		double b = Convert.ToDouble( Console.ReadLine());
		double c = (a + b)/2 ; //Вычисление среднего арифметического
		Console.WriteLine("Среднее арифметическое равно\n");
		Console.WriteLine(c); //Вывод значения вычисленного среднего арифметического
	}
}
