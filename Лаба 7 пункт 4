using System;
public class Program
{
	public static void Main(string[] args)
	{
	 Console.WriteLine("Введите скорости первого и второго автомобилей\n V1=");
	 double V1 = Convert.ToDouble(Console.ReadLine());
	 Console.WriteLine("V2=");
	 double V2 = Convert.ToDouble(Console.ReadLine());
	 Console.WriteLine("Укажите растояние между автомобилями\n S=");
	 double S = Convert.ToDouble(Console.ReadLine());
	 Console.WriteLine("Укажите время их движения\n T=");
	 double T = Convert.ToDouble(Console.ReadLine());
	 double s = T*(V1 + V2) + S;
	 Console.WriteLine("Расстояние между автомобилями спустя T часов равно "+ (s)+ " км");
	}
}
