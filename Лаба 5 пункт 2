using System;
					
public class Program
{
	public static void Main(string[] args)
	{
	Console.WriteLine("Введите координату точки A\n");
	double A = Convert.ToDouble(Console.ReadLine());
	Console.WriteLine("Введите координату точки B\n");
	double B = Convert.ToDouble(Console.ReadLine());
	Console.WriteLine("Введите координату точки C\n");
	double C = Convert.ToDouble(Console.ReadLine());
	double AC = Math.Abs(C - A);
	Console.WriteLine("AC =\n");
	Console.WriteLine(AC);
	double BC = Math.Abs(C - B);
	Console.WriteLine("BC =\n");
	Console.WriteLine(BC);
	Console.WriteLine("AC + BC =\n");
	Console.WriteLine(AC + BC);
	}
}
